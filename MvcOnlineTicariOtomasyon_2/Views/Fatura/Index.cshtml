@using MvcOnlineTicariOtomasyon_2.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="py-3">
    <table class="table table-bordered text-center">
        <tr>
            <th>Seri Sıra No</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Toplam</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
            <th>Yeni Kalem</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.FaturaSeriNo@k.FaturaSiraNo</td>
                <td>@k.Tarih</td>
                <td>@k.Saat</td>
                <td>@k.Toplam ₺</td>
                <td>
                    <a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-warning">Güncelle</a>
                </td>
                <td>
                    <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-primary">Detay</a>
                </td>
                <td>
                    <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-info">Yeni Kalem</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Fatura/FaturaEkle" class="btn btn-danger">Yeni Fatura Girişi</a>
    <br /> <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">PopUp Dialog Ekranı</h2>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <tr>
                            <td>Seri Sıra No</td>
                            <td>Toplam</td>
                        </tr>
                        @foreach (var x in Model)
                        { 
                            <tr>
                                <td>@x.FaturaSeriNo@x.FaturaSiraNo</td>
                                <td>@x.Toplam</td>
                            </tr>
                        }
                    </table>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
                </div>
            </div>
        </div>
    </div>
</div>