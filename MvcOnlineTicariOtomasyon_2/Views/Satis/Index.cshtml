@using MvcOnlineTicariOtomasyon_2.Models.Siniflar;
    @model List<SatisHareket>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <br />

    <div class="py-3">
        <table class="table table-bordered text-center" id="tbl1">
            <thead>
                <tr>
                    <th>Ürün</th>
                    <th>Cari</th>
                    <th>Personel</th>
                    <th>Adet</th>
                    <th>Fiyat</th>
                    <th>Toplam Tutar</th>
                    <th>Tarih</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@k.Urun.UrunAd</td>
                        <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
                        <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
                        <td>@k.Adet</td>
                        <td>@k.Fiyat</td>
                        <td>@k.ToplamTutar</td>
                        <td>@k.Tarih</td>
                        <td>
                            <a href="/Satis/SatisGetir/@k.SatisId" class="btn btn-warning">Güncelle</a>
                        </td>
                        <td>
                            <a href="/Satis/SatisDetay/@k.SatisId" class="btn btn-primary">Detaylar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="d-flex justify-content-end">
            <a href="/Satis/YeniSatis/" class="btn btn-danger">Yeni Satış Yap</a>
        </div>
    </div>


