@using MvcOnlineTicariOtomasyon_2.Models.Siniflar;
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="py-3">
    <table class="table table-bordered text-center">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Görsel</th>
            <th>Departman</th>
            <th>Güncelle</th>
            <th>Satışlar</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.PersonelId</td>
                <td>@k.PersonelAd</td>
                <td>@k.PersonelSoyad</td>
                <td>
                    <img src="@k.PersonelGorsel" style="width: 100px; height:80px; border-radius: 50% "/>
                </td>
                <td>@k.Departman.DepartmanAd</td>
                <td>
                    <a href="/Personel/PersonelGetir/@k.PersonelId" class="btn btn-warning">Güncelle</a>
                </td>
                <td>
                    <a href="/Departman/DepartmanPersonelSatis/@k.PersonelId" class="btn btn-primary">Detay</a>
                </td>
            </tr>
        }

    </table>
    <div class="d-flex justify-content-end">
        <a href="/Personel/PersonelEkle/" class="btn btn-danger">Personel Ekle</a>
    </div>
</div>