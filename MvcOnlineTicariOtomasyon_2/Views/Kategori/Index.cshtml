@using MvcOnlineTicariOtomasyon_2.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="py-3">
    <table class="table table-bordered  text-center">
        <tr>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach(var k in Model)
            {
                <tr>
                    <td>
                        @k.KateroriAd
                    </td>
                    <td>
                        <a href="/Kategori/KategoriSil/@k.KategoriID" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Kategori/KategoriGetir/@k.KategoriID" class="btn btn-success">Güncelle</a>
                    </td>
                </tr>
            }
            
    </table>
    @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))
    <div class="d-flex justify-content-end">
        <a href="/Kategori/KategoriEkle" class="btn btn-danger">Kategori Ekle</a>
    </div>
</div>